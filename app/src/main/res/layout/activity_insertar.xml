<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insertar">

    <ImageView
        android:id="@+id/imgLogo_insertar"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/txtNombre_insertar"
        style="@style/txtLable"
        android:layout_marginTop="24dp"
        android:text="Nombre: "
        app:layout_constraintStart_toStartOf="@+id/imgLogo_insertar"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo_insertar" />

    <EditText
        android:id="@+id/editNombre_insertar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/txtNombre_insertar"
        app:layout_constraintTop_toTopOf="@+id/txtNombre_insertar" />

    <TextView
        android:id="@+id/txtPrecio_insertar"
        style="@style/txtLable"
        android:layout_marginTop="24dp"
        android:text="Precio: "
        app:layout_constraintStart_toStartOf="@+id/txtNombre_insertar"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre_insertar" />

    <EditText
        android:id="@+id/editprecio_insertar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/txtPrecio_insertar"
        app:layout_constraintTop_toTopOf="@+id/txtPrecio_insertar" />

    <TextView
        android:id="@+id/txtTipo_insertar"
        style="@style/txtLable"
        android:layout_marginTop="24dp"
        android:text="Tipo: "
        app:layout_constraintStart_toStartOf="@+id/txtPrecio_insertar"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio_insertar" />

    <Spinner
        android:id="@+id/spinTipo_insertar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTipo_insertar"
        app:layout_constraintStart_toEndOf="@+id/txtTipo_insertar"
        app:layout_constraintTop_toTopOf="@+id/txtTipo_insertar" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Insertar"
        app:layout_constraintEnd_toEndOf="@+id/imgLogo_insertar"
        app:layout_constraintStart_toStartOf="@+id/imgLogo_insertar"
        app:layout_constraintTop_toBottomOf="@+id/txtTipo_insertar" />


</androidx.constraintlayout.widget.ConstraintLayout>